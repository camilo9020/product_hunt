<div class="container">
	<div class="row">
		<div class="col-sm-12">
			<h1>Products</h1>

			<% if signed_in? %>
				<div class="text-right">
					<%= link_to "<span class='glyphicon glyphicon-plus'></span> Nuevo Producto".html_safe, new_product_path, class: "btn btn-primary" %>
				</div>

			<% end %>
			<table class="table">
				<thead>
					<tr>
						<th>Id</th>
						<th>Nombre</th>
						<th>URL</th>
						<th>Descripci√≥n</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<%  @products.each do |product| %>
						<tr>
							<td><%= product.id %></td>
							<td><%= link_to product.name, product  %></td>
							<td><%= product.url %></td>
							<td><%= product.description %></td>
							<td>

							<% if signed_in? %>
								<%= link_to "Editar", edit_product_path(product) %>
								<%= link_to "Eliminar", product_path(product), method: :delete, data: { confirm: "estas seguro de elimnar este producto"} %>
							<% end %>
							</td>
						</tr>
					<% end %>
				</tbody>

			</table>
		</div>
	</div>
</div>

